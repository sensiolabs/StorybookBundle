{
    "name": "@sensiolabs/storybook-symfony-webpack5",
    "version": "0.0.1-beta",
    "description": "Storybook for Symfony",
    "keywords": [
        "storybook",
        "symfony"
    ],
    "license": "MIT",
    "scripts": {
        "build": "tsup",
        "build:watch": "npm run build -- --watch",
        "clean": "rimraf ./dist",
        "prebuild": "npm run clean",
        "lint": "eslint src",
        "format": "prettier src/**/*.ts {,src/*/}*.{json,md} --write",
        "test": "vitest --run src/**/*.test.ts",
        "check-format": "npm run format -- --no-write --check",
        "check-lint": "npm run lint -- --no-fix"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "node": "./dist/index.js",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        },
        "./renderer": {
            "require": "./dist/renderer/preset.js"
        },
        "./preset": {
            "require": "./dist/preset.js"
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md",
        "*.js",
        "*.d.ts",
        "!src/**/*"
    ],
    "dependencies": {
        "@storybook/builder-webpack5": "^8.0.4",
        "@storybook/csf-tools": "^8.0.4",
        "@storybook/docs-tools": "^8.0.4",
        "@storybook/node-logger": "^8.0.4",
        "@storybook/preview-api": "^8.0.4",
        "@storybook/types": "^8.0.4",
        "css-loader": "^6.7.3",
        "html-webpack-plugin": "^5.6.0",
        "http-proxy-middleware": "^2.0.6",
        "jsdom": "^23.0.1",
        "node-polyfill-webpack-plugin": "^2.0.1",
        "tsconfig-paths": "^4.0.0",
        "tsconfig-paths-webpack-plugin": "^4.0.1",
        "unplugin": "^1.5.1"
    },
    "devDependencies": {
        "@storybook/manager": "^8.0.4",
        "@types/is-glob": "^4.0.4",
        "@types/jest": "^29.5.11",
        "@types/jsdom": "^21.1.6",
        "@types/loader-utils": "^2.0.5",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "fast-xml-parser": "^4.3.2",
        "glob": "^10.3.10",
        "is-glob": "^4.0.3",
        "prettier": "^3.2.4",
        "rimraf": "^5.0.5",
        "ts-dedent": "^2.0.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.0.1",
        "typescript": "^5.3.2",
        "vitest": "^1.1.1",
        "vitest-mock-extended": "^1.3.1",
        "webpack": "^5.65.0",
        "webpack-virtual-modules": "^0.6.1"
    },
    "peerDependencies": {
        "typescript": "^5.3.3",
        "webpack": "^5.0.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        },
        "webpack": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "bundler": {
        "nodeEntries": [
            "./src/preset.ts",
            "./src/server/framework-preset.ts",
            "./src/builders/webpack-builder.ts"
        ],
        "exportEntries": [
            "./src/index.ts"
        ],
        "previewEntries": [
            "./src/entry-preview.ts",
            "./src/entry-preview-docs.ts"
        ]
    },
    "packageManager": "yarn@4.1.1"
}
